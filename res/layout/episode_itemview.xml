<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginRight="1dp"
	android:layout_marginLeft="1dp"
	android:foreground="@drawable/transparent_ripple">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<androidx.cardview.widget.CardView
			xmlns:card_view="http://schemas.android.com/apk/res-auto"
			card_view:cardCornerRadius="14px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			>
			<LinearLayout
				android:id="@+id/episode_picture_container"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:padding="4px" >
				<androidx.cardview.widget.CardView
					xmlns:card_view="http://schemas.android.com/apk/res-auto"
					card_view:cardCornerRadius="10.5px"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<ImageView
						android:id="@+id/episode_picture"
						android:layout_width="245px"
						android:layout_height="145px"
						/>
				</androidx.cardview.widget.CardView>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<TextView
			android:id="@+id/episode_number"
			android:layout_width="77px"
			android:layout_height="77px"
			android:layout_marginTop="1dp"
			android:layout_marginBottom="1dp"
			android:textAppearance="?android:attr/textAppearanceListItemSmall"
			android:textSize="12sp"
			android:fontFamily="@font/gotham_narrow_bold"
			android:gravity="center"
			android:layout_gravity="center" />
	</LinearLayout>
</FrameLayout>



