<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/picture_backdrop_cardview"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"	>
                <ImageView
                    android:id="@+id/picture_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@drawable/play_button"
                android:foreground="@drawable/circular_ripple"
                android:gravity="center"
                android:visibility="visible" />

            <Button
                android:id="@+id/resume"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:drawableStart="@drawable/button_icon_resume"
                android:paddingBottom="10dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:background="@drawable/transparent_ripple"
                android:gravity="center"
                android:text="@string/resume"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@id/picture_backdrop_cardview"
                android:layout_alignEnd="@id/picture_backdrop_cardview"
                android:layout_marginEnd="0dp"
                />
            <Button
                android:id="@+id/remote_resume"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/button_icon_network"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:background="@drawable/transparent_ripple"
                android:gravity="center"
                android:text="@string/remote_resume"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@id/picture_backdrop_cardview"
                android:layout_alignStart="@id/picture_backdrop_cardview"
                android:layout_marginStart="0dp"
                />
        </RelativeLayout>

        <LinearLayout  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:id="@+id/posterCard"
            >

            <FrameLayout
                android:layout_weight="0.5"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="left"
                    card_view:cardCornerRadius="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <include
                        layout="@layout/video_info2_poster_layout"
                        />
                </androidx.cardview.widget.CardView>
            </FrameLayout>
            <RelativeLayout
                android:id="@+id/titlebar_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/white_font"
                    android:singleLine="true"
                    android:textSize="22sp" />

                <LinearLayout
                    android:id="@+id/episode_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_view"
                    android:layout_alignEnd="@+id/info_container"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/s_e_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/header_font"
                        android:textSize="@dimen/video_info_medium_text"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:id="@+id/episode_resolution_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/resolution_background">

                            <TextView
                                android:id="@+id/episode_resolution"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/gotham_narrow_black"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/episode_title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/episode_info_container"
                    android:fontFamily="@font/lato_light_italic"
                    android:textColor="@color/header_font"
                    android:singleLine="true"
                    android:textSize="@dimen/video_info_medium_text" />

                <LinearLayout
                    android:id="@+id/movie_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/episode_title_view"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/movie_popularity_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/movie_popularity_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/gotham_narrow_medium"
                            android:text="@string/movie_popularity_header"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/header_font"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/movie_popularity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/gotham_narrow_medium"
                            android:text="00"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/light_orange"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:id="@+id/movie_resolution_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/resolution_background">

                            <TextView
                                android:id="@+id/movie_resolution"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:text="HD"
                                android:fontFamily="@font/gotham_narrow_black"
                                android:gravity="center_horizontal"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/info_container"
                    android:layout_below="@+id/movie_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="4dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/star_rating" />
                        <TextView
                            android:id="@+id/scrap_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/header_font"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="@dimen/video_info_medium_text"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/vote_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="3dp"
                            android:fontFamily="@font/lato_light"
                            android:textColor="@color/header_font"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <TextView
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:id="@+id/year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/header_font"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/video_info_medium_text"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/main_info_container"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/content_rating_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_edges">

                            <TextView
                                android:id="@+id/content_rating"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/gotham_narrow_black"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/runtime_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/runtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/header_font"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="@dimen/video_info_medium_text"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:gravity="end"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</merge>