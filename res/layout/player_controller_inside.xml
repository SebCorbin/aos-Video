<?xml version="1.0" encoding="utf-8"?>
<com.archos.mediacenter.video.player.PlayerControlsRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playerControllers"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_weight="1" >

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/control_bar"
        layout="@layout/player_help_overlay" />
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/unlock_instructions"
        layout="@layout/unlock_instructions" />
    <FrameLayout
        android:id="@+id/tv_menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/my_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="horizontal" >

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:visibility="visible"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?attr/actionBarSize">
        <FrameLayout
            android:id="@+id/upper_touch_zone"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_weight = "0"
            android:scrollbars="horizontal"
             />
        <FrameLayout
            android:id="@+id/play_pause_touch_zone"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight = "1"
            android:layout_gravity="center"
            android:scrollbars="horizontal"
            />
        <FrameLayout
            android:id="@+id/lower_touch_zone"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_weight = "0"
            android:layout_gravity="center"
            android:scrollbars="horizontal"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:background="@drawable/player_bar_2014"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:visibility="invisible" >

        <LinearLayout
            android:id="@+id/poster_cardview_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/player_bar_2014"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:id="@+id/poster_cardview"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dip"
            android:layout_marginEnd="10dip"
            android:fontFamily="@font/gotham_narrow_bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:singleLine="true"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical" >

            <com.archos.mediacenter.utils.seekbar.ArchosProgressSlider
                android:id="@+id/seek_progress"
                style="@style/PlayerSliderHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingBottom="13dip"
                android:paddingTop="31dip" />

            <TextView
                android:id="@+id/time_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingTop="10dip"
                android:textSize="@dimen/player_time_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/content_rating_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingStart="50dp"
                android:layout_gravity="center"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_edges">

                    <TextView
                        android:id="@+id/content_rating"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/content_rating"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/gotham_narrow_black"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/definition_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/content_rating_container"
                android:paddingStart="40dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/resolution_background">

                    <TextView
                        android:id="@+id/definition"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/video_definition"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/gotham_narrow_black"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rating_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/star_rating" />
                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.0"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/video_info_medium_text"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/seek_state"
                style="?android:attr/progressBarStyleSmallTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="12dip"
                android:layout_toRightOf="@id/time_current"
                android:visibility="gone" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingTop="10dip"
                android:textSize="@dimen/player_time_text_size"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dip" >

            <ImageButton
                android:id="@+id/pause"
                style="@style/PlayerControlButton"
                android:layout_centerInParent="true"
                android:paddingBottom="10dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                ads:srcCompat="@drawable/video_play_selector" />

            <ImageButton
                android:id="@+id/backward"
                style="@style/PlayerControlButton"
                android:layout_marginLeft="-12dip"
                android:layout_toLeftOf="@id/pause"
                android:paddingBottom="10dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                ads:srcCompat="@drawable/video_backward_selector" />

            <ImageButton
                android:id="@+id/forward"
                style="@style/PlayerControlButton"
                android:layout_toRightOf="@id/pause"
                android:paddingBottom="10dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                ads:srcCompat="@drawable/video_forward_selector" />

            <ImageButton
                android:id="@+id/format"
                style="@style/PlayerControlButton"
                android:layout_marginLeft="-10dip"
                android:layout_toRightOf="@id/forward"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingRight="0dip"
                ads:srcCompat="@drawable/video_format_original_selector" />
        </RelativeLayout>
    </LinearLayout>

</com.archos.mediacenter.video.player.PlayerControlsRelativeLayout>