<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scraper_plot_content"

    android:paddingBottom="@dimen/video_info_margin_half"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/tagline"
        android:paddingBottom="@dimen/video_info_margin_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/video_info_medium_text" />


    <LinearLayout
        android:id="@+id/scrap_genre_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/scrap_genres_title"
            android:text="@string/genres"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/video_info_medium_text"/>
        <TextView
            android:id="@+id/scrap_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/video_info_medium_text"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/scrap_director_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/scrap_director_title"
            android:text="@string/scrap_director"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/video_info_medium_text"/>
        <TextView
            android:id="@+id/scrap_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/video_info_medium_text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scrap_writer_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/scrap_writer_title"
            android:text="@string/scrap_writer"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/video_info_medium_text"/>
        <TextView
            android:id="@+id/scrap_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/video_info_medium_text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/release_air_date_contaner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp">
        <TextView
            android:id="@+id/scrap_date_title"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/video_info_medium_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/scrap_date"
            android:textSize="@dimen/video_info_medium_text"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_runtime_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp">
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/video_runtime"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/video_info_medium_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/scrap_duration"
            style="@style/VideoInfoFileInfo"
            android:textSize="@dimen/video_info_medium_text"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scrap_studio_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:text="@string/scrap_studio"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/video_info_medium_text"/>
        <TextView
            android:id="@+id/scrap_studio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/VideoInfoFileInfo"
            android:ellipsize="end"
            android:textSize="@dimen/video_info_medium_text"/>
    </LinearLayout>


    <TextView
        android:id="@+id/scrap_plot"
        style="@style/VideoInfoFileInfo"
        android:ellipsize="end"
        android:textStyle="italic" />
</LinearLayout>
